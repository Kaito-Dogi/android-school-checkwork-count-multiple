<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/left_count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="64sp"
        app:layout_constraintBottom_toTopOf="@id/left_plus_button"
        app:layout_constraintEnd_toStartOf="@id/right_count_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/left_plus_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLUS"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/left_count_text"
        app:layout_constraintStart_toStartOf="@id/left_count_text"
        app:layout_constraintTop_toBottomOf="@id/left_count_text" />

    <TextView
        android:id="@+id/right_count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="64sp"
        app:layout_constraintBottom_toTopOf="@id/right_plus_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/left_count_text"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/right_plus_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLUS"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/right_count_text"
        app:layout_constraintStart_toStartOf="@id/right_count_text"
        app:layout_constraintTop_toBottomOf="@id/right_count_text" />
</androidx.constraintlayout.widget.ConstraintLayout>